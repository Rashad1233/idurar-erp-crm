{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (nodemon)",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nodemon",
        "--inspect-brk",
        "src/server.js"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}
